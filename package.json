{
  "name": "@livemoe/monorepo",
  "packageManager": "pnpm@7.1.0",
  "version": "0.0.2",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "MIT",
  "author": "Seven",
  "scripts": {
    "dev": "npm -C playground run dev",
    "build": "rimraf packages/*/dist packages/*/build && pnpm -r --parallel build",
    "stub": "pnpm -r --parallel run stub",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "publish": "pnpm -r publish",
    "test": "vitest -u",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.23.1",
    "@types/node": "^17.0.34",
    "bumpp": "^7.1.1",
    "c8": "^7.11.3",
    "cross-env": "^7.0.3",
    "electron": "^18.2.4",
    "eslint": "^8.15.0",
    "lint-staged": "^12.4.1",
    "pnpm": "^7.1.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4",
    "unbuild": "^0.7.4",
    "vitest": "^0.12.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
